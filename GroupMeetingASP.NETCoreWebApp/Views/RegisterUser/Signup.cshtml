@model RegisterUser

<div class="d-flex justify-content-center mt-5">
    <div class="border p-4 rounded" style="max-width: 500px; width: 100%;">
        <h2 class="text-center">Signup</h2>
        <form asp-action="Signup" method="post">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger mt-1 d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger mt-1 d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger mt-1 d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger mt-1 d-block"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mx-2" style="height: 45px;">Signup</button>
                <a asp-controller="RegisterUser" asp-action="Login" class="btn btn-secondary mx-2" style="height: 45px;">Login</a>
            </div>
        </form>
    </div>
</div>

<!-- Display validation summary -->
<div asp-validation-summary="ModelOnly" class="text-danger text-center mt-2"></div>

<!-- jQuery and Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-ZvpUoO/+PpkeOiV7sAsl6KddEoCVrVo3QDsOQ74x8pkG3on2zUfu5pYeeaDwgE1g" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgE7bLQ6ff6owX8pJMO9m60U1mDnlZ1ebf9t4Fq2b/x0I5kW8k9" crossorigin="anonymous"></script>

